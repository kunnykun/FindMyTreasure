rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Helper function to check if user is detectorist
    function isDetectorist() {
      return request.auth != null &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'detectorist';
    }

    // Users collection
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth.uid == userId;
      allow update: if request.auth.uid == userId || isAdmin();
      allow delete: if isAdmin();
    }

    // Lost items collection
    match /lostItems/{itemId} {
      // Anyone can create (for anonymous submissions)
      allow create: if true;

      // Anyone can read (public access for checkout and viewing)
      // Users need to see their items on checkout page without being logged in
      allow read: if true;

      // Only admins and assigned detectorists can update
      allow update: if isAdmin() ||
                      (isDetectorist() && resource.data.assignedTo == request.auth.uid);

      // Only admins can delete
      allow delete: if isAdmin();
    }

    // Payments collection
    match /payments/{paymentId} {
      // Authenticated users can read their own payments
      allow read: if request.auth != null &&
                    (resource.data.userId == request.auth.uid || isAdmin());

      // Only Cloud Functions and admins can write
      allow create: if true; // Cloud Functions create these
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    // Detectorists collection (if implementing team management)
    match /detectorists/{detectoristId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
  }
}
