rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Lost item photos
    match /lost-items/{itemId}/{allPaths=**} {
      // Allow anyone to upload photos for lost items
      allow create: if request.resource.size < 5 * 1024 * 1024 // Max 5MB
                    && request.resource.contentType.matches('image/.*');

      // Allow authenticated users to read
      allow read: if request.auth != null;

      // Only admins can update or delete
      allow update, delete: if request.auth != null;
    }

    // Recovery photos
    match /recovery-photos/{itemId}/{allPaths=**} {
      // Only authenticated users (detectorists) can upload
      allow create: if request.auth != null
                    && request.resource.size < 10 * 1024 * 1024 // Max 10MB
                    && request.resource.contentType.matches('image/.*');

      // Authenticated users can read
      allow read: if request.auth != null;

      // Only admins can delete
      allow delete: if request.auth != null;
    }

    // User profile photos
    match /profile-photos/{userId}/{allPaths=**} {
      allow create, update: if request.auth != null
                            && request.auth.uid == userId
                            && request.resource.size < 2 * 1024 * 1024; // Max 2MB

      allow read: if request.auth != null;
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
  }
}
